<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_activated="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/black_divider"/>
                    <corners android:radius="@dimen/rounding_radius" />
                </shape>
            </item>

            <item
                android:left="-1dp"
                android:right="-1dp"
                android:top="0dp"
                android:bottom="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/white_divider" />
                    <corners android:radius="@dimen/rounding_radius" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/black_divider"/>
                    <corners android:radius="@dimen/rounding_radius" />
                </shape>
            </item>

            <item
                android:left="-1dp"
                android:right="-1dp"
                android:top="0dp"
                android:bottom="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/white" />
                    <corners android:radius="@dimen/rounding_radius" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>